<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startActivity.StartActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/start"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="132dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addRound"
            android:layout_width="58dp"
            android:layout_height="54dp"
            android:layout_marginEnd="44dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538"
            app:srcCompat="@drawable/ic_baseline_exposure_plus_1_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/removeRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/roundCount"
            app:layout_constraintHorizontal_bias="0.266"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_exposure_neg_1_24" />

        <TextView
            android:id="@+id/roundCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/round_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/roundCount"
            app:layout_constraintStart_toEndOf="@+id/removeRound"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="409dp"
        android:layout_height="132dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addPlayer"
            android:layout_width="58dp"
            android:layout_height="54dp"
            android:layout_marginEnd="44dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538"
            app:srcCompat="@drawable/ic_baseline_exposure_plus_1_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/removePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playerCount"
            app:layout_constraintHorizontal_bias="0.218"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.526"
            app:srcCompat="@drawable/ic_baseline_exposure_neg_1_24" />

        <TextView
            android:id="@+id/playerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="116dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playerCount"
            app:layout_constraintStart_toEndOf="@+id/removePlayer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.504" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="143dp"
        android:layout_height="327dp"
        android:layout_marginStart="19dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:layout_width="136dp"
            android:layout_height="288dp"
            tools:layout_editor_absoluteY="95dp">

            <RadioButton
                android:id="@+id/car_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/car"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tree_radioButton" />

            <RadioButton
                android:id="@+id/cat_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/cat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/car_radioButton" />

            <RadioButton
                android:id="@+id/dog_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/dog"
                app:layout_constraintStart_toEndOf="@+id/tree_radioButton"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/boat_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/boat"
                app:layout_constraintStart_toEndOf="@+id/car_radioButton"
                app:layout_constraintTop_toBottomOf="@+id/dog_radioButton" />

            <RadioButton
                android:id="@+id/book_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/book"
                app:layout_constraintStart_toEndOf="@+id/cat_radioButton"
                app:layout_constraintTop_toBottomOf="@+id/boat_radioButton" />

            <RadioButton
                android:id="@+id/bus_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/bus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dog_radioButton"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/house_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:layout_marginEnd="4dp"
                android:text="@string/house"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/boat_radioButton"
                app:layout_constraintTop_toBottomOf="@+id/bus_radioButton" />

            <RadioButton
                android:id="@+id/camera_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:layout_marginEnd="4dp"
                android:text="@string/camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/book_radioButton"
                app:layout_constraintTop_toBottomOf="@+id/house_radioButton" />

            <RadioButton
                android:id="@+id/tree_radioButton"
                android:layout_width="136dp"
                android:layout_height="96dp"
                android:text="@string/tree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RadioGroup>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="160dp"
        android:layout_height="141dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/options"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="140dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:tint="@color/purple_200" />

</androidx.constraintlayout.widget.ConstraintLayout>