<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.isel.pdm.drag">

    <application
        android:name=".utils.data.DragApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DRAG">
        <activity
            android:name=".startActivity.StartActivity"
            android:noHistory="true" >
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".draw_activity.DrawActivity"
            android:theme="@style/Theme.DRAG.NoActionBar"
            android:noHistory="true" >

        </activity>
        <activity
            android:name=".showActivity.ShowActivity"
            android:theme="@style/Theme.DRAG.NoActionBar">

        </activity>
    </application>

</manifest>